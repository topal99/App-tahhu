<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".UcoActivity">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/header_uco"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FF5722"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/left"
            app:tint="#FFFFFF" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="UCO"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/kebab"
            app:tint="#FFFFFF"/>
    </LinearLayout>

    <!-- Buttons for UCO Features -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/header_uco"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center">

        <ImageView
            android:layout_marginTop="10mm"
            android:id="@+id/btn_tukar_minyak"
            android:layout_width="20mm"
            android:layout_height="20mm"
            android:src="@drawable/tukarminyak" />

        <Button
            android:id="@+id/btn_tukar_minyak"
            android:layout_width="30mm"
            android:layout_height="10mm"
            android:text="Tukar Minyak Jelantah"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/btn_tukar_minyak"
            android:layout_width="20mm"
            android:layout_height="20mm"
            android:layout_marginTop="10mm"
            android:src="@drawable/lokasi" />

        <Button
            android:id="@+id/btn_lokasi_penukaran"
            android:layout_width="30mm"
            android:layout_height="10mm"
            android:text="Lokasi Penukaran"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"/>

        <ImageView
            android:id="@+id/btn_tukar_minyak"
            android:layout_width="20mm"
            android:layout_height="20mm"
            android:layout_marginTop="10mm"
            android:src="@drawable/order" />

        <Button
            android:id="@+id/btn_order_penjemputan"
            android:layout_width="30mm"
            android:layout_height="10mm"
            android:text="Order Penjemputan"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
